{% include 'includes/header.html.twig' %}

<div class="col-sm-6 col-sm-offset-3">
  {% include 'includes/message.html.twig' %}
  <h1>Users</h1>
  <p style="margin: 0;">{{ users|length }} User{% if users|length > 1%}s{% endif %}</p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
        <tr>
          <td>{{ user.firstName }}</td>
          <td>{{ user.lastName }}</td>
          <td>{{ user.emailAddress }}</td>
          <td class="text-right"><a href="/users/{{ user.id }}"><i class="glyphicon glyphicon-zoom-in"></i></a></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <div class="text-right">
    <a href="/users/add"><i class="glyphicon glyphicon-plus-sign colorGreen"></i> New User</a>
  </div>
</div>

{% include 'includes/footer.html.twig' %}